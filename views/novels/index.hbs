          <div class="col-lg-6">
            <h1 class="mt-5">{{author.name}}</h1>
            <div>
            <br>
            <ul>
              <h3>Selected Works:</h3> 
                <p>
                  {{#each author.novels }}
                    <ul>
                      <li>
                        <a href='/authors/{{../author._id}}/novels/{{this._id}}'>{{this.title}}</a>
                      </li>
                    </ul>
                  {{/each}}
                </p>
            </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

</div>


