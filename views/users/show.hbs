<div class="showPage">
    <h1>{{user.username}}</h1>


<div>
    <h2>Favorite Authors:</h2> 
    {{#each authors }}
        <p>{{name}}</p>
    {{/each}}

</div>

<form action='/users/{{user._id}}?_method=DELETE' method='POST'>
    <input type="submit" value="Delete User">
</form>

<div><a href='/users/{{user._id}}/edit'>Edit User</a></div>
<div><a href='/users'>Go Back to Users</a></div>
</div>